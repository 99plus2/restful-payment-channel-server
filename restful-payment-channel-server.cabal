  default-extensions: OverloadedStrings

  build-depends:
    base                      >= 4     && < 5,
    -- Servant
    servant                   >= 0.7   && < 0.9,
    servant-server            >= 0.7   && < 0.9,
    servant-client            >= 0.7   && < 0.9,
    http-api-data,
    -- Snap
    monad-control             == 1.0.*,
    mtl                       >= 2     && < 3,
    snap-core                 == 1.0.*,
    snap-server               == 1.0.*,
    snap                      == 1.0.*,
    io-streams,

    bitcoin-payment-channel   == 0.3.0.2,
    haskoin-core              == 0.4.0,
    bytestring                >= 0.9.1 && < 0.11,
    blaze-builder,
    -- APISpec.Blockchain
    blockchain-restful-address-index,
    secp256k1,
    transformers,
    aeson, vector,
    base16-bytestring,
    scientific,
    time,
    lens,
    aeson-pretty,
    containers,stm-containers,
    configurator,
    cereal,
    hashable,
    string-conversions,
    errors,
    hexstring,
    http-client, http-client-tls, http-types,
    case-insensitive,
    unix,
    exceptions,
    filepath,
    tagged,
    warp


  other-modules: PayChanServer.App,
                 Common.Types,
                 BlockchainAPI.Impl.ChainSo.ChainSo
                 BlockchainAPI.Types
                 ChanStore.Interface
                 ChanStore.Lib.ChanMap
                 ChanStore.Lib.Settlement
                 ChanStore.Lib.Types
                 ChanStore.Spec
                 Common.ResourceURL
                 Common.URLParam
                 Common.Util
                 ConnManager.Connection
                 ConnManager.RequestRunner
                 PayChanServer.Config.Types
                 PayChanServer.Config.Util
                 PayChanServer.DB
                 PayChanServer.Init
                 PayChanServer.Settlement
                 PayChanServer.Types
                 PayChanServer.Util
